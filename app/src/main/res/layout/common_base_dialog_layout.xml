<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@android:color/transparent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_clear_cache_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_dialog_title"
            style="@style/PopWindow_title_style"
            android:minHeight="80dp"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textColor="#272727"
            android:textSize="@dimen/font_middle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/little_gray"/>

        <LinearLayout
            android:id="@+id/two_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="@dimen/font_16sp"/>

            <View
                android:id="@+id/divide_v"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/little_gray"/>

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#308CF8"
                android:textSize="@dimen/font_16sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/one_button_container"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/alert_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#308CF8"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>